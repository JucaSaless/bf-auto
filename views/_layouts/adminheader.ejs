              <li><a href="/users/logout">Sair</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%- messages('messages', locals) %>
      
      <% if (errors) {%>
          <% errors.forEach(function(error) { %>
          <div class="alert alert-danger">
              <%= error.msg %>
          </div>
          <% });%>
      <% }%>
